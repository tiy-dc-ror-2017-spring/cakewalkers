<p id="notice"><%= notice %></p>

<h1>Products</h1>

<%= first_page_link %>
<%= last_page_link %>
<%= next_link %>
<%= back_link %>

<table class="table products-table">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      <th>Unit price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.picture, size: "72", class: 'thumbnail' %></td>

        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.unit_price_in_cents %></td>
        <td><%= link_to 'Show', admin_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_admin_product_path, class: 'btn btn-success' %>
